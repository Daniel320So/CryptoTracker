@model CryptoTracker.Models.ViewModels.DetailsWallet
@{
    ViewBag.Title = "View";
}
<h2>@Model.SelectedWallet.WalletName</h2>
<nav>
    <ul>
        <li><a href="/Wallet/List">Go back to list</a></li>
        <li><a href="/Wallet/Edit/@Model.SelectedWallet.WalletId">Update</a></li>
        <li><a href="/Wallet/EditBalance/@Model.SelectedWallet.WalletId">Update Balance</a></li>
        <li><a style="color:#ab2020;" href="/Wallet/DeleteConfirm/@Model.SelectedWallet.WalletId">Delete</a></li>
    </ul>
</nav>
<div class="details">
    <div class="col-md-6 col-sm-12">
        <div>Description: @Model.SelectedWallet.WalletDescription</div>
        <div>Type: @Model.SelectedWallet.WalletType</div>
    </div>
    <div class="col-md-6 col-sm-12 token-balance-table">
        <h3>Token Balances:</h3>
        <table>
            <tr>
                <th>Token</th>
                <th>Balance</th>
                <th>Token Price ($)</th>
                <th>USD Value ($)</th>
            </tr>
            @foreach (var token in @Model.Tokens)
            {
                <tr>
                    <td>@token.TokenName</td>
                    <td>@token.TokenBalance @token.TokenSymbol</td>
                    <td>@token.TokenPrice</td>
                    <td>@token.TokenValue</td>
                </tr>
            }
        </table>
    </div>
</div>