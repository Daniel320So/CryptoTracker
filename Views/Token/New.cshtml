@{
    ViewBag.Title = "Add";
}

<h2>Create Token</h2>
<a href="/Token/List">Cancel</a>
<form action="/Token/Create" method="POST">
    <div>
        <label>Name:</label> <input type="text" name="TokenName" />
    </div>
    <div>
        <label>Symbol:</label> <input type="text" name="TokenSymbol" />
    </div>
    <div>
        <label>Description:</label> <textarea id="TokenDescription" name="TokenDescription"></textarea>
    </div>
    <div>
        <label>Price:</label> <input type="number" name="TokenPrice" />
    </div>
    <div class="risk-level">
        <label>Token Risk Level:</label>
        <br />
        <input type="radio" id="low" name="TokenRiskLevel" value="Low">
        <label for="low">Low</label><br>
        <input type="radio" id="medium" name="TokenRiskLevel" value="Medium">
        <label for="medium">Medium</label><br>
        <input type="radio" id="high" name="TokenRiskLevel" value="High">
        <label for="high">High</label>
    </div>
    <div>
        <input class="btn-default"type="submit" value="Add Token" />
    </div>
</form>
